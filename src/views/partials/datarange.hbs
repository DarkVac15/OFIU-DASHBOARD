<div class="dashboard-header bg-dark text-white py-3">
   <h1 class="h3"> Métricas</h1>
    
  <div class="container-fluid d-flex justify-content-between align-items-center">
    <!-- Título del Dashboard -->
   

    <!-- Selector de Fechas y Botones de Filtrado -->
    <div class="date-filter d-flex align-items-center">
      <label for="date-range" class="me-2 w-100 text-wrap "> Filtrar por fecha: 

      </label>
      <button class="btn btn-outline-light btn-sm me-2" onclick="filterByPeriod('day')">Día</button>
      <button class="btn btn-outline-light btn-sm me-2" onclick="filterByPeriod('week')">Semana</button>
      <button class="btn btn-outline-light btn-sm me-2" onclick="filterByPeriod('month')">Mes</button>

      <input type="date" id="start-date" name="start-date" value="{{startDate}}" class="form-control form-control-sm bg-dark text-white border-light me-2">
      <span class="me-2">hasta</span>
      <input type="date" id="end-date" name="end-date" value="{{endDate}}" class="form-control form-control-sm bg-dark text-white border-light me-2">
      <button class="btn btn-primary btn-sm" onclick="filterByDate()">Filtrar</button>
    </div>
  </div>
</div>
